@model PlaneTicketShop.Core.Models.Booking

@{
    ViewData["Title"] = "Book Flight";
}

<div class="container">
    <h1 class="my-4">Book Flight</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Book">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="FlightId" />

                        <div class="form-group mb-3">
                            <label asp-for="NumberOfPassengers" class="control-label">Number of Passengers</label>
                            <input asp-for="NumberOfPassengers" class="form-control" min="1" max="10" />
                            <span asp-validation-for="NumberOfPassengers" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PassengerName" class="control-label">Passenger Name</label>
                            <input asp-for="PassengerName" class="form-control" />
                            <span asp-validation-for="PassengerName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PassengerEmail" class="control-label">Email</label>
                            <input asp-for="PassengerEmail" class="form-control" type="email" />
                            <span asp-validation-for="PassengerEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PassengerPhone" class="control-label">Phone Number</label>
                            <input asp-for="PassengerPhone" class="form-control" />
                            <span asp-validation-for="PassengerPhone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Confirm Booking" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to Flights</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 